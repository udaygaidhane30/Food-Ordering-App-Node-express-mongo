<section class="hero py-16">
        <div class="container mx-auto flex items-center justify-between">
            <div class="w-1/2">
                <h6 class="text-lg"><em>From the south to your mouth</em></h6>
                <h1 class="text-3xl md:text-6xl font-bold">Truly Indian</h1>
                <a href="#menuj"><button class="px-6 py-2 rounded-full font-bold text-white mt-4 btn-primary">Order Now</button></a>
            </div>
            <div class="w-1/2">
                <img src="/img/dish5.jpg" alt="">
            </div>
        </div>
    </section>
    <section id="menuj" class="menu container mx-auto py-8">
        <h1 class="text-xl font-bold mb-8">All Dishes</h1>
        <div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">

            <% food.forEach(function(food){ %>
                <div class="w-full md:w-64">
                    <img class="h-40 mb-4 mx-auto" src="/img/<%=food.image%>" alt="">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg"><%=food.name%></h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs" ><%=food.size%> pcs</span>
                        <div class="flex items-center justify-around mt-6">
                            <span class="font-bold text-lg">â‚¹<%=food.price%></span>
                            <button data-food ="<%= JSON.stringify(food) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                            </button>
                        </div>
                    </div>
                </div>
        <%     }) %>
            
</section>
